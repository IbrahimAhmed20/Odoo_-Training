<odoo>
    <data>
    
        <!-- Inherit the crm.lead form view to add new fields -->
        <record id="view_crm_lead_form_inherit_next_call_date" model="ir.ui.view">
            <field name="name">crm.lead.form.inherit.next.call.date</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="next_call_date"/>
                    <field name="user_test"/>
                </xpath>
            </field>
        </record>

        <!-- Actions: Admin and Demo Leads -->
        <record id="action_admin_leads" model="ir.actions.act_window">
            <field name="name">Admin Leads</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('user_id', '=', 2)]</field>
        </record>

        <record id="action_demo_leads" model="ir.actions.act_window">
            <field name="name">Demo Leads</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[('user_id', '=', 6)]</field>
        </record>

        <!-- Action to open the Print Lead Wizard (restricted by groups) -->
        <record id="action_print_lead_wizard" model="ir.actions.act_window">
            <field name="name">Print Lead Wizard</field>
            <field name="res_model">print.lead.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Main Menu: Sales CRM Lead -->
        <menuitem id="menu_sales_crm_lead_root"
                  name="Sales CRM Lead"
                  parent="crm.crm_menu_root"
                  sequence="1"/>

        <!-- Submenu: Admin -->
        <menuitem id="menu_sales_crm_lead_admin"
                  name="Admin"
                  parent="menu_sales_crm_lead_root"
                  action="action_admin_leads"
                  sequence="10"/>

        <!-- Submenu: Demo -->
        <menuitem id="menu_sales_crm_lead_demo"
                  name="Demo"
                  parent="menu_sales_crm_lead_root"
                  action="action_demo_leads"
                  sequence="20"/>

        <!-- Submenu: Print Lead Report (restricted by groups) -->
        <menuitem id="menu_print_lead_wizard"
                  name="Print Lead Report"
                  parent="menu_sales_crm_lead_root"
                  action="action_print_lead_wizard"
                  sequence="30"/>

        <!-- Inherit the crm.lead search view to add custom filters for Admin and Demo -->
        <record id="view_crm_case_opportunities_filter_inherit_custom" model="ir.ui.view">
            <field name="name">crm.lead.filter.admin.demo</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter string="Admin"
                            name="admin"
                            domain="[('user_id', '=', 2)]" />
                    <filter string="Demo"
                            name="demo"
                            domain="[('user_id', '=', 6)]" />
                </xpath>
            </field>
        </record>

        <!-- Wizard form view: Print Leads -->
        <record id="view_print_lead_wizard" model="ir.ui.view">
            <field name="name">print.lead.wizard.form</field>
            <field name="model">print.lead.wizard</field>
            <field name="arch" type="xml">
                <form string="Print Leads">
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                        <button string="Print PDF" name="print_pdf" type="object" class="btn-primary"/>
                        <button string="Print Excel" name="print_excel" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>     

    </data>
</odoo>
