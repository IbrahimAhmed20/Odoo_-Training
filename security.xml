
<odoo>

   <!-- Category -->
    <record id="crm_lead_access_category" model="ir.module.category">
        <field name="name">CRM Lead</field>
    </record>

    <!-- Groups -->
    <record id="crm_lead_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="crm_lead_access_category"/>
    </record>

    <record id="crm_lead_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="crm_lead_access_category"/>
    </record>

<record id="rule_crm_lead_admin_only" model="ir.rule">
    <field name="name">CRM Lead: Admin Only</field>
    <field name="model_id" ref="crm.model_crm_lead"/>
    <field name="domain_force">[('user_test', '=', 'admin')]</field>
    <field name="groups" eval="[(4, ref('crm_custom.crm_lead_group_manager'))]"/>
    <field name="perm_read" eval="True"/>
    <field name="perm_write" eval="True"/>
    <field name="perm_create" eval="True"/>
    <field name="perm_unlink" eval="True"/>
</record>

<record id="rule_crm_lead_demo_only" model="ir.rule">
    <field name="name">CRM Lead: Demo Only</field>
    <field name="model_id" ref="crm.model_crm_lead"/>
    <field name="domain_force">[('user_test', '=', 'demo')]</field>
    <field name="groups" eval="[(4, ref('crm_custom.crm_lead_group_user'))]"/>
    <field name="perm_read" eval="True"/>
    <field name="perm_write" eval="False"/>
    <field name="perm_create" eval="False"/>
    <field name="perm_unlink" eval="False"/>
</record>
 
</odoo>
