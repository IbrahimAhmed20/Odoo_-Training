<odoo>
  <data>                

 <record id="edit_project_view_form_custom" model="ir.ui.view">
    <field name="name">project.project.form.custom</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.edit_project"/>
    <field name="arch" type="xml">

        <!-- Add button to header -->
        <xpath expr="//form/header" position="inside">
            <button name="action_open_create_lead_wizard"
                    type="object"
                    string="Create Lead"
                    class="oe_highlight"
                    icon="fa-plus"/>
        </xpath>

        <!-- Add field after label_tasks -->
        <xpath expr="//field[@name='label_tasks']" position="after">
            <field name="customer_id" string="Customer"/>
        </xpath>

        <!-- Add worked_days after date_start -->
        <xpath expr="//field[@name='date_start']" position="after">
            <field name="worked_days" string="Worked Days" readonly="1"/>
        </xpath>

        <!-- Add age field inside settings page -->
        <xpath expr="//page[@name='settings']" position="inside">
            <group>
                <field name="age" string="Age"/>
            </group>
        </xpath>

    </field>
</record>

 <record id="view_project_lead_wizard_form" model="ir.ui.view">
        <field name="name">project.lead.wizard.form</field>
        <field name="model">project.lead.wizard</field>
        <field name="arch" type="xml">
            <form string="Create New Lead">
                <group>
                    <field name="name"/>
                </group>
                <footer>
                    <button name="action_create_lead"
                            type="object"
                            string="Create"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

       
